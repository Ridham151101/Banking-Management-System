<h1>Edit Employee</h1>

<%= form_for(@user, url: employee_path, html: { class: "needs-validation", novalidate: true }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Update Employee", class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Back', employees_path, class: "btn btn-secondary" %>
  </div>
<% end %>
